---
import type { SlMenuItem } from '@shoelace-style/shoelace';


interface Props extends Omit<SlMenuItem, any> {
    /** The type of menu item to render. To use `checked`, this value must be set to `checkbox`. */
    type?: 'normal' | 'checkbox';
    /** Draws the item in a checked state. */
    checked?: boolean;
    /** A unique value to store in the menu item. This can be used as a way to identify menu items when selected. */
    value?: string;
    /** Draws the menu item in a loading state. */
    loading?: boolean;
    /** Draws the menu item in a disabled state, preventing selection. */
    disabled?: boolean;
    id?: string;
}

const { checked, id, disabled, loading, type = "normal", value, ...rest } = Astro.props;
---

<sl-menu-item
    {checked}
    {id}
    {disabled}
    {loading}
    {type}
    {value}
    {...rest}
    >
    {
        Astro.slots.has('prefix') && <slot slot="prefix" name="prefix"/>
    }
    {
        Astro.slots.has('suffix') && <slot slot="suffix" name="suffix"/>
    }
    {
        Astro.slots.has('submenu') && <slot slot="submenu" name="submenu"/>
    }
    <slot />
</sl-menu-item>

<script>
    import '@shoelace-style/shoelace/dist/components/menu-item/menu-item.js';
</script>