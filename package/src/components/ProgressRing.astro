---
import type { SlProgressRing } from '@shoelace-style/shoelace'
import type { HTMLAttributes } from 'astro/types';

interface Props extends Omit<SlProgressRing, any>, Partial<HTMLAttributes<'div'>> {
    /** The current progress as a percentage, 0 to 100. */
    value?: number;
    /** A custom label for assistive devices. */
    label?: string;
    id?: string;
}

const { value, id, label, ...rest } = Astro.props;
---

<sl-progress-ring
    {value}
    {label}
    {id}
    {...rest}
    >
    <slot />
</sl-progress-ring>

<script>
    import '@shoelace-style/shoelace/dist/components/progress-ring/progress-ring.js';
</script>