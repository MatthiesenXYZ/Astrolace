---
import type { SlAnimatedImage } from '@shoelace-style/shoelace';

interface Props extends Omit<SlAnimatedImage, any>{
    /** The path to the image to load. */
    src?: string;
    /** A description of the image used by assistive devices. */
    alt?: string;
    /** Plays the animation. When this attribute is remove, the animation will pause. */
    play?: boolean;
    /** Customizes the icons used for the play and pause buttons. */
    slots?: {
        playIcon?: string;
        pauseIcon?: string;
    }
}

const { src, alt, play, slots, ...rest } = Astro.props;

const playIcon = slots?.playIcon || 'play';
const pauseIcon = slots?.pauseIcon || 'pause';
---

<sl-animated-image {src} {alt} {play} {...rest}>
    <sl-icon slot="play-icon" name={playIcon}></sl-icon>
    <sl-icon slot="pause-icon" name={pauseIcon}></sl-icon>
</sl-animated-image>

<script>
    import '@shoelace-style/shoelace/dist/components/animated-image/animated-image.js';
</script>